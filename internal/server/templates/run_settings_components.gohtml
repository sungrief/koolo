      <label class="inline-flex items-center"><input type="checkbox" name="shopping.vendors" value="Drognan" {{ if (index .Shopping.VendorMap "Drognan") }}checked{{ end }}> <span class="ml-2">Drognan</span></label>
      <label class="inline-flex items-center"><input type="checkbox" name="shopping.vendors" value="Ormus"   {{ if (index .Shopping.VendorMap "Ormus") }}checked{{ end }}> <span class="ml-2">Ormus</span></label>
      <label class="inline-flex items-center"><input type="checkbox" name="shopping.vendors" value="Halbu"   {{ if (index .Shopping.VendorMap "Halbu") }}checked{{ end }}> <span class="ml-2">Halbu</span></label>
      <label class="inline-flex items-center"><input type="checkbox" name="shopping.vendors" value="Malah"   {{ if (index .Shopping.VendorMap "Malah") }}checked{{ end }}> <span class="ml-2">Malah</span></label>
      <label class="inline-flex items-center"><input type="checkbox" name="shopping.vendors" value="Larzuk"  {{ if (index .Shopping.VendorMap "Larzuk") }}checked{{ end }}> <span class="ml-2">Larzuk</span></label>
      <label class="inline-flex items-center"><input type="checkbox" name="shopping.vendors" value="Drehya"  {{ if (index .Shopping.VendorMap "Drehya") }}checked{{ end }}> <span class="ml-2">Anya (Drehya)</span></label>
    </div>
  </div>
</div>
