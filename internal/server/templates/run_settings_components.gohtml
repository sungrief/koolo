    <label class="inline-flex items-center space-x-2">
      <input type="checkbox" name="shopping.enabled" {{ if .Shopping.Enabled }}checked{{ end }}>
      <span>Enable shopping run</span>
    </label>

    <label class="inline-flex items-center space-x-2">
